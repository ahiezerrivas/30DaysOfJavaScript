var challenge = '30 Days Of JavaScript';

console.log(challenge);

console.log(challenge.length);

console.log(challenge.toUpperCase());  // 4.Change all the string to capital letters using toUpperCase() method

console.log(challenge.toLowerCase());  // 5.Change all the string to lowercase letters using toLowerCase() method

console.log(challenge.substr(0,2));    // 6.Cut(slice) out the first word of the string using substr() or substring() method

console.log(challenge.substring(2));   // 7.Slice out the phrase Days Of JavaScript from 30 Days Of JavaScript.

console.log(sentence.substr(30,24));   // 8.Use substr to slice out the phase because because because in the following sentence:'You cannot end a sentence with because because because is a conjunction'

console.log(string.includes('Script')) // 9.Check if the string contains a word Script using includes() method

console.log(string.split())            // 10.Split the string into array using split() method

console.log(string.split(' '))         // 11.Split the string 30 Days Of JavaScript at the space using split() method

console.log(company.split(','))        // 12.'Facebook, Google, Microsoft, Apple, IBM, Oracle, Amazon' split the string at the comma and change it to an array.

let string1 = '30 Days Of JavaScript'
console.log(string1.replace('JavaScript', 'Python')) //13.Change 30 Days Of JavaScript to 30 Days Of Python using replace() method.

console.log(string1.charAt(15))        // 14.What is character at index 15 in '30 Days Of JavaScript' string use charAt() method.

console.log(string1.charCodeAt(11))    // 15.What is the character code of J in '30 Days Of JavaScript' string using charCodeAt()

console.log(string1.indexOf('a'))      // 16.Use indexOf to determine the position of the first occurrence of a in 30 Days Of JavaScript

console.log(string1.lastIndexOf('a'))  // 17.Use lastIndexOf to determine the position of the last occurrence of a in 30 Days Of JavaScript.

console.log(sentence.indexOf('because')) // 18.Use indexOf to find the position of the first occurrence of the word because in the following sentence:'You cannot end a sentence with because because because is a conjunction'

console.log(sentence.lastIndexOf('because')) //19.Use lastIndexOf to find the position of the last occurrence of the word because in the following sentence:'You cannot end a sentence with because because because is a conjunction'

console.log(sentence.search('because'))   //20.Use search to find the position of the first occurrence of the word because in the following sentence:'You cannot end a sentence with because because because is a conjunction'

console.log(sentence.trim())           // 21.Use trim() to remove if there is trailing whitespace at the beginning and the end of a string.E.g ' 30 Days Of JavaScript '.

console.log(string1.startsWith('30 Days Of JavaScript'))  //22.Use startsWith() method with the string 30 Days Of JavaScript make the result true

console.log(string1.endsWith('30 Days Of JavaScript'))    //23.Use endsWith() method with the string 30 Days Of JavaScript make the result true

console.log(sentence.match('a'));       //24.Use match() method to find all the aâ€™s in 30 Days Of JavaScript

